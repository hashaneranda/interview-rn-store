{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "rootDir": ".",
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
}